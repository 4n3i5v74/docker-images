    lastfm_use_action = "yes";
    typofix_format = "%r(old) %G%0new%n";

    twt_channels = "all";
    twt_color_bitlbee = "lgray ";
    twt_color_retweet = "black green ";
    twt_color_hash = "yellow ";
    twt_color_http = "gray ";
