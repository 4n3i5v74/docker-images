  core = {
    real_name = "znc user";
    user_name = "znc_user";
    nick = "znc_user";
    timestamp_format = "%H:%M:%S";
  };

  "fe-common/core" = {
    theme = "solarized-universal";
    show_names_on_join = "no";
    #    use_msgs_window = "yes";
    #    autocreate_query_level = "";
    hilight_nick_matches = "yes";
    hilight_color = "%M%0";
    hilight_act_color = "%M%0";
